@model Reservation
@{
    ViewData["Title"] = "Reservation Confirmed";
}

<div class="container">
    <div class="row">
        <div class="col text-center">
            <h1>@ViewData["Title"]</h1>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr><th>Restaurant Name</th><th>Guests</th><th>Sitting Type</th><th>Date and Time</th><th>Customer Name</th><th></th></tr>
            </thead>
            <tbody>
                <tr>
                    <td class="align-middle text-nowrap">@Model.Sitting.Restaurant.Name</td>
                    <td class="align-middle text-nowrap">@Model.Guests</td>
                    <td class="align-middle text-nowrap">@Model.Sitting.SittingType.Description</td>
                    <td class="align-middle text-nowrap">@Model.StartTime.ToString("dd/MM/yyyy h:mm tt")</td>
                    <td class="align-middle text-nowrap">@Model.Customer.FullName</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="row mt-3">
        <div class="col">
            <p>
                Your booking at @Model.Sitting.Restaurant.Name has been made. Your confirmation number is <strong>@Model.ConfirmationCode</strong>. The restaurant will
                contact you prior to your reservation to confirm the booking.
            </p>
            <div class="text-center">
                <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Done</a>
            </div>
        </div>
    </div>
</div>
