@model ReservationSystemDraft_v1.Data.SittingType

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<h1>Rename Sitting Type</h1>

<form asp-action="Rename" method="post">
    <div asp-validation-summary="ModelOnly" class="alert-danger"></div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <div class="row">
        <div class="col">
            <a class="btn btn-secondary mr-2" asp-action="Index">Back</a>
            <button class="btn btn-primary" type="submit">Save</button>
        </div>     
    </div>
    <input type="hidden" asp-for="Id" />
</form>