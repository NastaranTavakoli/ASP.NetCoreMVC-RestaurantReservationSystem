@model ReservationSystemDraft_v1.Areas.Admin.Models.Reservation.Create

<partial name="_ReservationNavPartial" />

<div class="row align-items-middle">
    <div class="col">
        <h2 class="d-inline">Reservation Details</h2>
    </div>
    <div class="col-auto text-right">
        <a asp-controller="Reservation" asp-action="SelectTime" class="btn btn-primary mb-3">Back</a>
    </div>
</div>
<hr />



<form class="form-inline">
    <div class="form-group">
        <label asp-for="StartTime"></label>
        <input readonly class="form-control " asp-for="StartTime.TimeOfDay" />
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input readonly class="form-control" asp-for="Date" />
    </div>
    <div class="form-group">
        <label asp-for="Guests"></label>
        <input readonly class="form-control" asp-for="Guests" />
    </div>
</form>

<form asp-action="Create" autocomplete="off">
    <br />
    <h3>Please enter customer details</h3>
    <div class="form-row">
        <div class="form-group col-md-6 col-lg-4">
            <label asp-for="Email"></label>
            <input id="email" list="datalistOptions" class="form-control" asp-for="Email" />
            <datalist id="datalistOptions"></datalist>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6 col-lg-4">
            <label asp-for="FirstName"></label>
            <input id="firstName" class="form-control" asp-for="FirstName" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6 col-lg-4">
            <label asp-for="LastName"></label>
            <input id="lastName" class="form-control" asp-for="LastName" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6 col-lg-4">
            <label asp-for="Phone"></label>
            <input id="phone" class="form-control" asp-for="Phone" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6 col-lg-4">
            <label asp-for="SourceId"></label>
            <select class="form-control" asp-for="SourceId" asp-items="@Model.SourceTypes">
                <option disabled>Select Source Type</option>
            </select>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6 col-lg-4">
            <label asp-for="Notes"></label>
            <textarea class="form-control" asp-for="Notes"></textarea>
        </div>
    </div>
    <div class="form-row">
        <div class="col">
            <button type="submit" class="btn btn-primary">Confirm Reservation</button>
        </div>
    </div>
    <input type="hidden" asp-for="StartTime" />
    <input type="hidden" asp-for="SittingId" />
    <input type="hidden" asp-for="RestaurantId" />
    <input type="hidden" asp-for="Duration">
    <input type="hidden" asp-for="Guests">
</form>


@section Scripts{
    <script src="~/js/admin.reservation.confirmDetails.js"></script>
}


